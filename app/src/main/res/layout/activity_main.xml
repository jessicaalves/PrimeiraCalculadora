<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="356dp"
        android:layout_height="498dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/visorDigitacao"
            android:layout_width="352dp"
            android:layout_height="138dp"
            android:text="0"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:visibility="visible"
            tools:text="0" />

        <TextView
            android:id="@+id/visorResultado"
            android:layout_width="353dp"
            android:layout_height="121dp"
            android:text="Seu resultado"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:visibility="visible"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="18dp"
            tools:layout_editor_absoluteY="40dp"
            tools:text="Seu resultado" />

        <android.support.v7.widget.GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="false"
            android:visibility="visible"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="17dp"
            tools:layout_editor_absoluteY="233dp">

            <Button
                android:id="@+id/clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:onClick="clicaBotao"
                android:text="C"
                android:visibility="visible"
                tools:text="C" />

            <Button
                android:id="@+id/divisao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/actionModeSplitBackground"
                android:onClick="clicaBotao"
                android:text="/"
                tools:text="/" />

            <Button
                android:id="@+id/subtracao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/actionModeSplitBackground"
                android:onClick="clicaBotao"
                android:text="-"
                tools:text="-" />

            <Button
                android:id="@+id/soma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/actionModeSplitBackground"
                android:onClick="clicaBotao"
                android:text="+"
                app:layout_column="3"
                app:layout_row="0"
                tools:text="+" />

            <Button
                android:id="@+id/numero7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:onClick="clicaBotao"
                android:text="7"
                app:layout_column="0"
                app:layout_row="1"
                tools:text="7" />

            <Button
                android:id="@+id/numero8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/colorAccent"
                android:onClick="clicaBotao"
                android:text="8"
                tools:text="8" />

            <Button
                android:id="@+id/numero9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/colorAccent"
                android:onClick="clicaBotao"
                android:text="9"
                tools:text="9" />

            <Button
                android:id="@+id/multiplicacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/actionModeSplitBackground"
                android:onClick="clicaBotao"
                android:text="x"
                app:layout_column="3"
                app:layout_row="1"
                tools:text="x" />

            <Button
                android:id="@+id/numero4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/colorAccent"
                android:onClick="clicaBotao"
                android:text="4"
                app:layout_column="0"
                app:layout_row="2"
                tools:text="4" />

            <Button
                android:id="@+id/numero5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/colorAccent"
                android:onClick="clicaBotao"
                android:text="5"
                tools:text="5" />

            <Button
                android:id="@+id/numero6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/colorAccent"
                android:onClick="clicaBotao"
                android:text="6"
                tools:text="6" />

            <Button
                android:id="@+id/igual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/actionModeSplitBackground"
                android:onClick="clicaBotao"
                android:text="="
                app:layout_column="3"
                app:layout_row="2"
                tools:text="=" />

            <Button
                android:id="@+id/numero1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/colorAccent"
                android:onClick="clicaBotao"
                android:text="1"
                app:layout_column="0"
                app:layout_row="3"
                tools:text="1" />

            <Button
                android:id="@+id/numero2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/colorAccent"
                android:onClick="clicaBotao"
                android:text="2"
                tools:text="2" />

            <Button
                android:id="@+id/numero3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/colorAccent"
                android:onClick="clicaBotao"
                android:text="3"
                tools:text="3" />

            <Button
                android:id="@+id/ponto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/actionModeSplitBackground"
                android:onClick="clicaBotao"
                android:text="."
                app:layout_column="3"
                app:layout_row="3"
                tools:text="." />

            <Button
                android:id="@+id/numero0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/colorAccent"
                android:onClick="clicaBotao"
                android:text="0"
                app:layout_column="0"
                app:layout_row="4"
                tools:text="0" />
        </android.support.v7.widget.GridLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>